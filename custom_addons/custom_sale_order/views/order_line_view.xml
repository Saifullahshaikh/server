<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="custom_sale_order_tree" model="ir.ui.view">
            <field name="name">custom.sale.order.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Sale Order Line" >

                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="product_uom_qty"/>
                    <!-- <field name="product_packaging_qty"/> -->
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                    
                    

                  </tree>
            </field>
        </record>

    <record model='ir.actions.act_window' id='custom_sale_order_act'>
            <field name="name">Custom Sale Order</field>
            <field name="res_model">sale.order.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>

        </record>
    
    <menuitem id="sale_order_line_menu" name="Sale Order Line"  action='custom_sale_order_act' parent="sale.sale_order_menu" sequence="2" />
</odoo>