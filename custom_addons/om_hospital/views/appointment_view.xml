<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree
            decoration-success="state == 'done'"
            decoration-info="state == 'in_consultation'"
            decoration-warning="state == 'draft'"
            decoration-danger="state == 'cancel'" sample="1" multi_edit="1">
                <field name="patient_id"/>
                <field name="appointment_time" groups="base.group_no_one"/>
                <field name="booking_date" optional="show"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="ref" optional="show"/>
                <field name="gender"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                decoration-success="state == 'done'"
                decoration-info="state == 'in_consultation'"
                decoration-warning="state == 'draft'"
                decoration-danger="state == 'cancel'"
                widget="badge"/>
        

            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_in_consultation" string="In Consultation" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_done" string="Done" type="object" states="in_consultation" class="oe_highlight"/>
                    <button name="action_draft" string="Draft" type="object" states="cancel" class="oe_highlight"/>
                    <!-- <button name="action_cancel" string="Cancel" type="object" states="draft" class="oe_highlight"/> -->
                    <button name="%(om_hospital.action_cancel_appointment)d" string="Cancel" type="action" context="{'default_appointment_id': active_id, 'hide_appointment': 1 }" states="draft" />
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <field name='image' widget='image' class='oe_avatar'/>
                    <div>
                        <h1>
                            <field name="priority" widget="priority"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" default_focus="1"/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id"/>
                            <field name="booking_date" help="Date of registration"/>
                        </group>
                        <group>
                            <field name="hide_sale_price" widget="boolean_toggle"/>
                            <field name="appointment_time"/>
                            <button name="action_test" string="Object Button" type="object" class="oe_highlight"/>
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button"
                            help="Redirect to patient module" 
                            confirm="Are you sure to perform patient action"
                            type="action" class="oe_highlight"/> 
                        </group>
                    </group>
                    <notebook>
                        <page string='Prescription' name='prescription'>
                            <field name='prescription' placeholder="Enter your prescription" 
                            options="{'collaborative':true, 'resizable':true, 'codeview':true }"/>
                        </page>
                        <page  string='Pharmacy Line' name='pharmacy'>
                            <field name="pharmacy_line_ids">
                                <tree editable='top'>
                                    <field name='product_id'/>
                                    <field name='price_unit' attrs="{'column_invisible': [('parent.hide_sale_price', '=', True)]}"/>
                                    <field name='quantity'/>
                                </tree>
                                <form>
                                    <group>
                                        <field name='product_id'/>
                                        <field name='price_unit' attrs="{'column_invisible': [('parent.hide_sale_price', '=', True)]}"/>
                                        <field name='quantity'/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"  groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

     <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'avatar_128', record.patient_id.raw_value)" t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="ref" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>
    </record>

    <menuitem id='menu_appointment'
                name='Appointments'
                action='action_hospital_appointment'
                parent='menu_appointment_master'
                sequence='10'/>

</odoo>


     