<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_cancel_appoinment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form >
                <group>
                    <group>
                        <field name='appointment_id'/>
                        <field name='reason'/>
                    </group>
                    <group>
                    </group>
                     <footer>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

     <menuitem id='menu_cancel_appoinment'
                name='Cancellation'
                parent='menu_appointment_master'
                action='action_cancel_appointment'
                sequence='20'/>

</odoo>


     